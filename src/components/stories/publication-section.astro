---
import publications from "@contents/publication-data.json"
import PublicationItem from "./publication-item.astro"
---

<section class="flex flex-col gap-10">
  <div class="flex flex-col gap-2">
    <span class="text-sm text-foreground/60 font-mono tracking-tight">
      Publications.
    </span>
    <h2 class="text-lg font-medium">Where's the stories?</h2>
  </div>

  <div class="grid grid-cols-2 tablet:grid-cols-3 gap-2 w-full">
    {publications.map((pub) => <PublicationItem publication={pub} />)}
  </div>
</section>
