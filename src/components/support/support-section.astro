---
import supports from "@contents/support-data.json"
import SupportItem from "./support-item.astro"
---

<section class="flex">
  <div class="flex flex-col gap-10">
    <div class="flex flex-col gap-2">
      <span class="text-sm text-foreground/60 font-mono tracking-tight">
        Support.
      </span>
      <h2 class="text-lg font-medium">Help me out.</h2>
    </div>

    <div class="grid grid-cols-1 tablet:grid-cols-2 gap-3">
      {supports.map((support) => <SupportItem support={support} />)}
    </div>
  </div>
</section>
