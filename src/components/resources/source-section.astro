---
import resources from "@contents/resources-data.json"
import SourceGroup from "./source-group.astro"
---

<section class="flex flex-col gap-10">
  <div class="flex flex-col gap-2">
    <span class="text-sm text-foreground/60 font-mono tracking-tight">
      Resources.
    </span>
    <h2 class="text-lg font-medium">Find goodies & things.</h2>
  </div>

  <div class="flex flex-col gap-20">
    {resources.map((group) => <SourceGroup group={group} />)}
  </div>
</section>
