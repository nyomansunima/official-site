---
export type SourceData = {
  title: string
  description: string
  url: string
}

type Props = {
  source: SourceData
}

const {
  source: { url, title, description },
} = Astro.props
---

<a
  href={url}
  target="_blank"
  class="flex bg-surface p-1 rounded-2xl col-span-1 transition-all duration-300 hover:-translate-y-1 group relative"
>
  <div
    class="flex flex-col w-full h-full border-2 border-border border-dashed rounded-xl p-3 transition-all duration-300 group-hover:border-link"
  >
    <div class="flex items-center gap-2">
      <i class="fi fi-br-circle-small text-foreground/60"></i>
      <h3 class="text-sm font-medium">{title}</h3>
    </div>

    <p
      class="text-sm text-foreground/60 mt-3 line-clamp-2 text-pretty leading-relaxed"
    >
      {description}
    </p>
  </div>
</a>
