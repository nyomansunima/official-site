---
type Props = {
  experience: {
    team: string
    teamLabel?: string
    position: string
    timeline: string
    teamUrl: string
  }
}

const {
  experience: { team, position, teamUrl, timeline },
} = Astro.props
---

<a
  href={teamUrl}
  target="_blank"
  class="flex flex-col tablet:flex-row items-start tablet:items-center text-sm gap-2 py-1 group"
>
  <div class="flex items-center font-medium grow gap-2">
    <i class="fi fi-br-circle-small text-foreground/60"></i>

    <span class="text-left flex-1 text-pretty cursor-pointer">{position}</span>
  </div>

  <div class="flex flex-wrap items-center gap-2">
    <span
      class="text-foreground/60 transition-all duration-300 group-hover:text-foreground"
    >
      {team} ({timeline})
    </span>
  </div>
</a>
