---
import domains from "@contents/domain-data.json"
import CraftItem from "./craft-item.astro"
---

<div class="flex flex-col">
  <div class="flex flex-col gap-2">
    <span class="text-sm text-foreground/60 font-mono tracking-tight">
      Domains.
    </span>
    <h2 class="text-lg font-medium">Place & teams to works.</h2>
  </div>

  <div
    class="grid grid-cols-1 tablet:grid-cols-2 w-full gap-2 tablet:gap-3 mt-10"
  >
    {domains.map((craft) => <CraftItem craft={craft} />)}
  </div>
</div>
