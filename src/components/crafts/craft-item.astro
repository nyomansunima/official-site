---
type Props = {
  craft: {
    title: string
    description: string
    link: string
  }
}

const {
  craft: { link, title, description },
} = Astro.props
---

<a
  href={link}
  target="_blank"
  class="flex col-span-1 p-1 rounded-2xl bg-surface relative group transition-all duration-300 hover:-translate-y-1"
>
  <div
    class="flex flex-col h-full w-full p-3 rounded-xl border-2 border-border border-dashed transition-all duration-300 group-hover:border-link"
  >
    <div class="flex gap-2">
      <i class="fi fi-br-circle-small text-foreground/60"></i>
      <h3 class="text-sm font-medium">{title}</h3>
    </div>

    <p
      class="text-sm mt-3 text-foreground/60 line-clamp-2 text-pretty leading-relaxed"
    >
      {description}
    </p>
  </div>
</a>
